<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/row_vertical_margin"
        android:layout_marginBottom="@dimen/row_vertical_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/image_small_size"
            android:layout_height="@dimen/image_small_size"
            android:layout_marginLeft="@dimen/row_horizontal_margin"
            android:layout_marginRight="@dimen/row_horizontal_margin"
            android:maxHeight="@dimen/image_small_size"
            android:maxWidth="@dimen/image_small_size"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/default_user"></ImageView>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/txtItemMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Message"
            android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
            android:textSize="@dimen/font_content_size"></TextView>

    </LinearLayout>

</LinearLayout>