<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_head_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/color_primary_light"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/navigation_vertical_margin"
    android:paddingLeft="@dimen/navigation_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >
    <!--
    android:background="@drawable/side_nav_bar"
    android:backgroundTint="@color/wallet_holo_blue_light"
    -->
    <!--ImageButton
        android:id="@+id/btnDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_menu_black_24dp"
        /-->

    <ImageView
        android:id="@+id/nav_head_imgAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/default_user" />

    <TextView
        android:id="@+id/nav_head_txtAliasOrName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Your Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/nav_head_txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World Summery"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

</LinearLayout>
