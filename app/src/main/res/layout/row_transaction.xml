<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layTransaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/text_horizontal_margin"
        android:layout_marginLeft="@dimen/text_horizontal_margin"
        android:layout_weight=".5"
        android:orientation="vertical">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:clickable="false"
            android:focusable="false"
            android:hint="@string/label_name"
            android:singleLine="true"
            android:text=""
            android:textSize="@dimen/font_row_size"
            android:maxLength="12"
            android:ellipsize="marquee"></TextView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:clickable="false"
                android:focusable="false"
                android:hint="@string/label_total"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/font_row_size"></TextView>

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="@dimen/font_row_size"
                ></TextView>

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/txtCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:clickable="false"
                android:focusable="false"
                android:hint="@string/label_currency"
                android:singleLine="true"
                android:text=""
                android:textAllCaps="true"
                android:textSize="@dimen/font_row_size"></TextView>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/imgState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/image_horizontal_margin"
        android:layout_marginLeft="@dimen/image_horizontal_margin"
        android:layout_weight=".5"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/ic_error_black_24dp"
        android:adjustViewBounds="true"
        ></ImageView>

</LinearLayout>